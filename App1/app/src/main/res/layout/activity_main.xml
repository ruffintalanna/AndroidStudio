<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ruffin.app1.MainActivity">

    <Button
        android:text="User Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="33dp"
        android:id="@+id/btn_userInfo" />

    <Button
        android:text="Hand Tremors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:id="@+id/btn_handTremors"
        android:layout_alignBaseline="@+id/btn_userInfo"
        android:layout_alignBottom="@+id/btn_userInfo"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Heartbeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_userInfo"
        android:layout_alignStart="@+id/btn_userInfo"
        android:layout_marginTop="155dp"
        android:id="@+id/btn_heartbeat" />

    <Button
        android:text="Send Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:id="@+id/btn_sendInfo"
        android:layout_alignBaseline="@+id/btn_heartbeat"
        android:layout_alignBottom="@+id/btn_heartbeat"
        android:layout_alignStart="@+id/btn_handTremors" />
</RelativeLayout>
